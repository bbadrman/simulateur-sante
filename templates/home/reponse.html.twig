{% extends 'base.html.twig' %}

{% block title %}Demande Envoyée avec Succès
{% endblock %}

{% block body %}

	<!-- Messages Flash -->
	{# {% for message in app.flashes('success') %}
						<div style="background-color: #d4edda; border: 1px solid #c3e6cb; color: #155724; padding: 1rem; border-radius: 5px; margin: 1rem; animation: slideDown 0.3s ease-out;">
							<i class="fas fa-check-circle" style="margin-right: 0.5rem;"></i>
							{{ message }}
						</div>
					{% endfor %} #}

		<style>
/* Styles pour la page de réponse */
.success-hero {
	background: linear-gradient(0deg, var(--primary-blue) 0%, var(--primary-green) 100%);
	color: var(--white);
	padding: 8rem 0 6rem;
	text-align: center;
	margin-top: 0;
	position: relative;
	overflow: hidden;
}

.success-hero::before {
	content: '';
	position: absolute;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: repeating-linear-gradient(0deg, transparent, transparent 2px, rgba(255, 255, 255, 0.1) 2px, rgba(255, 255, 255, 0.1) 4px);
	z-index: 1;
}

.success-content {
	position: relative;
	z-index: 2;
	max-width: 800px;
	margin: 0 auto;
	padding: 0 1rem;
}

.success-card {
	background: var(--white);
	border-radius: 20px;
	padding: 3rem;
	margin: 4rem auto;
	max-width: 1000px;
	box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
	position: relative;
	overflow: hidden;
}

.success-icon {
	width: 100px;
	height: 100px;
	background: linear-gradient(135deg, #ffc107, #ffb300);
	border-radius: 20px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 0 auto 2rem;
	animation: bounceIn 1s ease-out;
}

.success-title {
	color: var(--text-dark);
	font-size: 2.5rem;
	font-weight: 700;
	margin-bottom: 1.5rem;
	line-height: 1.2;
}

.success-description {
	color: var(--text-dark);
	font-size: 1.2rem;
	margin-bottom: 2.5rem;
	line-height: 1.6;
}

.btn-home {
	display: inline-block;
	background: linear-gradient(135deg, var(--primary-blue), var(--secondary-blue));
	color: var(--white);
	padding: 1rem 2.5rem;
	border-radius: 50px;
	text-decoration: none;
	font-weight: 700;
	transition: all 0.3s;
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.2);
}

.btn-home:hover {
	transform: translateY(-3px);
	box-shadow: 0 10px 25px rgba(0, 0, 0, 0.3);
	color: var(--white);
	text-decoration: none;
}

.info-grid {
	display: grid;
	grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
	gap: 2rem;
	margin-top: 4rem;
}

.info-card {
	background: #f8f9fa;
	padding: 2rem;
	border-radius: 15px;
	text-align: center;
	transition: all 0.3s ease;
	border: 1px solid #e9ecef;
}

.info-card:hover {
	transform: translateY(-5px);
	box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
}

.info-icon {
	width: 60px;
	height: 60px;
	border-radius: 15px;
	display: flex;
	align-items: center;
	justify-content: center;
	margin: 0 auto 1rem;
	font-size: 1.5rem;
	color: var(--white);
}

.info-icon.primary {
	background: linear-gradient(135deg, var(--primary-blue), var(--secondary-blue));
}

.info-icon.success {
	background: linear-gradient(135deg, #28a745, #20c997);
}

.info-icon.info {
	background: linear-gradient(135deg, #17a2b8, #6f42c1);
}

.info-title {
	color: var(--text-dark);
	font-size: 1.3rem;
	font-weight: 600;
	margin-bottom: 1rem;
}

.info-description {
	color: var(--text-light);
	line-height: 1.5;
}

.contact-section {
	background: linear-gradient(135deg, #f8f9fa, #e9ecef);
	padding: 2.5rem;
	border-radius: 15px;
	margin-top: 3rem;
	text-align: center;
	border: 1px solid #e9ecef;
}

.contact-title {
	color: var(--primary-blue);
	font-size: 1.5rem;
	font-weight: 700;
	margin-bottom: 1rem;
}

.contact-description {
	color: var(--text-light);
	margin-bottom: 2rem;
}

.btn-phone {
	display: inline-block;
	background: linear-gradient(135deg, var(--primary-green), #20c997);
	color: var(--white);
	padding: 1rem 2rem;
	border-radius: 50px;
	text-decoration: none;
	font-weight: 600;
	transition: all 0.3s;
	font-size: 1.1rem;
}

.btn-phone:hover {
	transform: translateY(-2px);
	box-shadow: 0 8px 20px rgba(42, 157, 143, 0.3);
	color: var(--white);
	text-decoration: none;
}

/* Animations */
@keyframes slideDown {
	from {
		opacity: 0;
		transform: translateY(-20px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

@keyframes bounceIn {
	0% {
		opacity: 0;
		transform: scale(0.3);
	}
	50% {
		opacity: 1;
		transform: scale(1.05);
	}
	70% {
		transform: scale(0.9);
	}
	100% {
		opacity: 1;
		transform: scale(1);
	}
}

@keyframes fadeInUp {
	from {
		opacity: 0;
		transform: translateY(30px);
	}
	to {
		opacity: 1;
		transform: translateY(0);
	}
}

.fade-in-up {
	animation: fadeInUp 0.8s ease forwards;
}

/* Floating icons */
.floating-icon {
	position: absolute;
	z-index: 1;
	animation: floating 6s ease-in-out infinite;
}

.floating-icon.top-left {
	top: 2rem;
	left: 2rem;
	font-size: 3rem;
	color: rgba(255, 193, 7, 0.3);
}

.floating-icon.bottom-right {
	bottom: 2rem;
	right: 2rem;
	font-size: 2.5rem;
	color: rgba(255, 193, 7, 0.25);
	animation-delay: -2s;
}

@keyframes floating {
	0,
	100% {
		transform: translateY(0px) rotate(0deg);
	}
	25% {
		transform: translateY(-20px) rotate(-5deg);
	}
	50% {
		transform: translateY(-10px) rotate(0deg);
	}
	75% {
		transform: translateY(-30px) rotate(5deg);
	}
}

/* Responsive */
@media(max-width: 768px) {
	.success-hero {
		padding: 6rem 0 4rem;
	}

	.success-card {
		margin: 2rem 1rem;
		padding: 2rem;
	}

	.success-title {
		font-size: 2rem;
	}

	.success-description {
		font-size: 1rem;
	}

	.info-grid {
		grid-template-columns: 1fr;
		gap: 1.5rem;
		margin-top: 2rem;
	}

	.info-card {
		padding: 1.5rem;
	}

	.floating-icon.top-left,
	.floating-icon.bottom-right {
		display: none;
	}
}
	</style>

	<!-- Hero Section -->
		<section
		class="success-hero"> <!-- Floating Icons -->
		<i class="fas fa-heartbeat floating-icon top-left"></i>
		<i class="fas fa-heartbeat floating-icon top-left"></i>


		<div class="success-content">
			<div class="success-icon">
				<i class="fas fa-check-circle" style="font-size: 3rem; color: var(--text-dark);"></i>
			</div>

			<h1 class="success-title">Votre demande a été envoyée avec succès !</h1>

			<p class="success-description text-dark">
				Un conseiller vous contactera rapidement pour finaliser votre dossier et vous proposer les meilleures offres d'assurance taxi.
			</p>

			<a href="/" class="btn-home">
				<i class="fas fa-home" style="margin-right: 0.5rem;"></i>
				Revenir à l'accueil
			</a>
		</div>
	</section>

	<!-- Content Section -->
	<section style="padding: 4rem 0; background-color: var(--white);">
		<div class="container">
			<div class="success-card fade-in-up">

				<div class="info-grid">
					<div class="info-card">
						<div class="info-icon primary">
							<i class="fas fa-clock"></i>
						</div>
						<h3 class="info-title">Réponse Rapide</h3>
						<p class="info-description">
							Un conseiller vous contactera dans les 24 heures suivant votre demande.
						</p>
					</div>

					<div class="info-card">
						<div class="info-icon success">
							<i class="fas fa-shield-alt"></i>
						</div>
						<h3 class="info-title">Devis Personnalisé</h3>
						<p class="info-description">
							Nos experts analyseront vos besoins pour vous proposer la meilleure couverture.
						</p>
					</div>

					<div class="info-card">
						<div class="info-icon info">
							<i class="fas fa-handshake"></i>
						</div>
						<h3 class="info-title">Accompagnement</h3>
						<p class="info-description">
							Nous vous accompagnons dans toutes vos démarches d'assurance taxi.
						</p>
					</div>
				</div>

				<!-- Contact Section -->
				<div class="contact-section">
					<h3 class="contact-title">
						<i class="fas fa-phone" style="margin-right: 0.5rem;"></i>
						Besoin d'aide immédiate ?
					</h3>
					<p class="contact-description">
						Notre équipe est disponible du lundi au vendredi de 9h à 18h
					</p>
					<a href="tel:0187660357" class="btn-phone">
						<i class="fas fa-phone" style="margin-right: 0.5rem;"></i>
						01 87 66 03 57
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Scripts -->
	 <script>
	document.addEventListener('DOMContentLoaded', function() {
	    // Animation au chargement
	    const elements = document.querySelectorAll('.info-card');
	    elements.forEach((el, index) => {
	        setTimeout(() => {
	            el.classList.add('fade-in-up');
	        }, index * 200);
	    });
	});
	
	// Smooth scrolling pour les liens d'ancrage
	document.querySelectorAll('a[href^="#"]').forEach(anchor => {
	    anchor.addEventListener('click', function (e) {
	        e.preventDefault();
	        const target = document.querySelector(this.getAttribute('href'));
	        if (target) {
	            target.scrollIntoView({behavior: 'smooth', block: 'start'});
	        }
	    });
	});
	</script>


{% endblock %}
