{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
 <!-- Form Section -->
   <section class="form-section" id="formulaire">
        <div class="container">
            <div class="form-container">
            
                <div class="form-header">
                <div class="logo">
                <i class="fas fa-heartbeat"></i>
                Mutuelle Santé
            </div>
                    <h2>01 87 66 03 57</h2>
                    <p>Obtenez votre devis personnalisé en 2 minutes</p>
                </div>
               
                <div class="form-steps">
                    <div class="step active">Étape 1: Vos besoins</div>
                    <div class="step">Étape 2: Votre profil</div>
                </div>
                
                <div class="form-body">
                 {{ form_start(form, {'attr': {'id': 'contactForm', 'class': 'space-y-6'}}) }}
                    
                    <!-- Step 1 - Maintenant "Vos besoins en assurance" -->
                    <div class="form-step active" id="step1">
                        <h3>Vos besoins en assurance</h3>
                        
                        <div class="form-group">
                            
                                {{ form_row(form.brithdate, {'attr': {'class': 'form-control'}}) }}
                             
                        </div>
                        
                        <div class="form-group">
                           
                            {{ form_row(form.postal, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                         
                        
                        <div class="form-group">
                            {{ form_row(form.regimSocial, {'attr': {'class': 'form-control'}}) }}
                        </div>
                      <div class="form-group">
    {{ form_row(form.benificaire, {'attr': {'class': 'form-control', 'id': 'benificaire'}}) }}
</div>

<div class="form-group" id="nbrBenificGroup" style="display:none;">
    {{ form_row(form.nbrBenific, {'attr': {'class': 'form-control'}}) }}
</div>

                        
                       
                        
                        <div class="form-footer">
                            <button class="btn btn-outline" id="prev-step1" disabled>Retour</button>
                            <button class="btn" id="next-step1">Continuer</button>
                        </div>
                    </div>
                    
                    <!-- Step 2 - Maintenant "Votre profil" -->
                    <div class="form-step" id="step2">
                        <h3>Votre profil</h3>
                        
                        <div class="form-group">
                            {{ form_label(form.gender, 'Civilité') }}
                            {{ form_widget(form.gender, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre civilité'
                                }
                            }) }}
                            {{ form_errors(form.gender) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.nom, 'Nom') }}
                            {{ form_widget(form.nom, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre nom'
                                }
                            }) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        
                        <div class="form-group">
                            {{ form_label(form.prenom, 'Prénom') }}
                            {{ form_widget(form.prenom, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'Votre prénom'
                                }
                            }) }}
                            {{ form_errors(form.prenom) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.tel, 'Téléphone') }}
                            {{ form_widget(form.tel, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': '01 04 03 00 00'
                                }
                            }) }}
                            {{ form_errors(form.tel) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.email, 'Email') }}
                            {{ form_widget(form.email, {
                                'attr': {
                                    'class': 'form-control',
                                    'placeholder': 'email@gmail.com'
                                }
                            }) }}
                            {{ form_errors(form.email) }}
                        </div>
                        
                        <div class="checkbox-group">
                            <p><strong>Nous n'aimons pas le spam non plus !</strong><br>
                            Votre adresse email nous permettra de vous envoyer le résumé de votre projet.</p>
                            
                            <div class="checkbox-option">
                                <input type="checkbox" id="newsletter">
                                <label for="newsletter">J'accepte de recevoir les offres de mutuelle-sante.fr par email et/ou par SMS.</label>
                            </div>
                            
                            <div class="checkbox-option">
                                <input type="checkbox" id="partners" checked>
                                <label for="partners">J'accepte de recevoir les offres commerciales des partenaires de mutuelle-sante.fr par mail et/ou par SMS.</label>
                            </div>
                        </div>
                        
                        <div class="form-footer">
                            <button class="btn btn-outline" id="prev-step2">Retour</button>
                            <button class="btn" id="confirm">Confirmer</button>
                        </div>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
