{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
 <!-- Form Section -->
    <section class="form-section" id="formulaire">
        <div class="container">
            <div class="form-container">
                <div class="form-header">
                    <h2>01 87 66 03 57</h2>
                    <p>Obtenez votre devis personnalisé en 2 minutes</p>
                </div>
                
                <div class="form-steps">
                    <div class="step active">Étape 1: Votre profil</div>
                    <div class="step">Étape 2: Vos besoins</div>
                </div>
                
                <div class="form-body">
                    <!-- Step 1 -->
                    <div class="form-step active" id="step1">
                        <h3>Votre profil</h3>
                        
                        <div class="radio-group">
                            <div class="radio-option">
                                <input type="radio" id="mr" name="civility" value="mr">
                                <label for="mr">M.</label>
                            </div>
                            <div class="radio-option">
                                <input type="radio" id="mrs" name="civility" value="mrs">
                                <label for="mrs">Mme</label>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="lastname">Nom</label>
                            <input type="text" id="lastname" class="form-control" placeholder="Votre nom">
                        </div>
                        
                        <div class="form-group">
                            <label for="firstname">Prénom</label>
                            <input type="text" id="firstname" class="form-control" placeholder="Votre prénom">
                        </div>
                        
                        <div class="form-group">
                            <label for="phone">Numéro de téléphone</label>
                            <input type="tel" id="phone" class="form-control" placeholder="01 04 03 00 00">
                        </div>
                        
                        <div class="form-group">
                            <label for="email">Email</label>
                            <input type="email" id="email" class="form-control" placeholder="email@gmail.com">
                        </div>
                        
                        <div class="checkbox-group">
                            <p><strong>Nous n'aimons pas le spam non plus !</strong><br>
                            Votre adresse email nous permettra de vous envoyer le résumé de votre projet.</p>
                            
                            <div class="checkbox-option">
                                <input type="checkbox" id="newsletter">
                                <label for="newsletter">J'accepte de recevoir les offres de mutuelle-sante.fr par email et/ou par SMS.</label>
                            </div>
                            
                            <div class="checkbox-option">
                                <input type="checkbox" id="partners" checked>
                                <label for="partners">J'accepte de recevoir les offres commerciales des partenaires de mutuelle-sante.fr par mail et/ou par SMS.</label>
                            </div>
                        </div>
                        
                        <div class="form-footer">
                            <button class="btn btn-outline" id="prev-step1" disabled>Retour</button>
                            <button class="btn" id="next-step1">Continuer</button>
                        </div>
                    </div>
                    
                    <!-- Step 2 -->
                    <div class="form-step" id="step2">
                        <h3>Vos besoins en assurance</h3>
                        
                        <div class="form-group">
                            <label>Date de naissance</label>
                            <div class="date-group">
                                <input type="text" class="form-control date-input" placeholder="JJ" maxlength="2">
                                <span>/</span>
                                <input type="text" class="form-control date-input" placeholder="MM" maxlength="2">
                                <span>/</span>
                                <input type="text" class="form-control date-input" placeholder="AAAA" maxlength="4">
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label for="profession">Profession</label>
                            <input type="text" id="profession" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label for="postalCode">Votre code postal actuel</label>
                            <input type="text" id="postalCode" class="form-control">
                        </div>
                        
                        <div class="form-group">
                            <label>Disposez-vous d'un contrat individuel ?</label>
                            <div class="radio-group">
                                <div class="radio-option">
                                    <input type="radio" id="hasContractYes" name="hasContract" value="yes">
                                    <label for="hasContractYes">Oui</label>
                                </div>
                                <div class="radio-option">
                                    <input type="radio" id="hasContractNo" name="hasContract" value="no">
                                    <label for="hasContractNo">Non</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-group" id="contractTypeGroup" style="display: none;">
                            <label for="contractType">Si Oui, lequel ?</label>
                            <input type="text" id="contractType" class="form-control" placeholder="Nom de votre mutuelle actuelle">
                        </div>
                        
                        <div class="form-group">
                            <label>À quelle date souhaitez-vous être assuré(e) ?</label>
                            <div class="date-group">
                                <input type="text" class="form-control date-input" placeholder="JJ" maxlength="2">
                                <span>/</span>
                                <input type="text" class="form-control date-input" placeholder="MM" maxlength="2">
                                <span>/</span>
                                <input type="text" class="form-control date-input" value="2025" readonly>
                            </div>
                        </div>
                        
                        <div class="form-group">
                            <label>Souhaitez-vous ajouter un bénéficiaire ?</label>
                            <div class="radio-group">
                                <div class="radio-option">
                                    <input type="radio" id="addBeneficiaryYes" name="addBeneficiary" value="yes">
                                    <label for="addBeneficiaryYes">Oui</label>
                                </div>
                                <div class="radio-option">
                                    <input type="radio" id="addBeneficiaryNo" name="addBeneficiary" value="no">
                                    <label for="addBeneficiaryNo">Non</label>
                                </div>
                            </div>
                        </div>
                        
                        <div class="form-footer">
                            <button class="btn btn-outline" id="prev-step2">Retour</button>
                            <button class="btn" id="confirm">Confirmer</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
